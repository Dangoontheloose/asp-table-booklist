@using WebGrease
@model IEnumerable<WebApplication1.Models.Book>

@{
    ViewBag.Title = "ListBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.TitlePageName</h2>


<table cellpadding="10" border="1">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Cover</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Author</td>
            <td><img width="328px" height="506px" src="/@item.Cover" alt="thumbnail pic"/></td>
            <td>@Html.ActionLink("Edit","Edit", new {id = item.Id - 1})</td>
            <td>@Html.ActionLink("Delete","Delete", new {id = item.Id - 1})</td>
        </tr>
    }
</table>



